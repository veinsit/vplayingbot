{   
    "extends": "eslint:recommended",
    "env": {
        "browser": true,
        "mocha": true,
        "node": true,
        "es6" : true
    },
    "parser": "typescript-eslint-parser",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",

        "ecmaFeatures": {
            "modules": true
        }
    },
    "rules": {
        "semi": 0,
        "no-console": 0,
        "no-unused-vars": 0
    }    
}
